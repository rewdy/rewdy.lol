---
import { Image } from "astro:assets";

import profilePic from "../images/profile-pic.jpg";
import { author, socialLinks as social } from "../siteData.ts";
import SocialLink from "./SocialLink.astro";

import "./Bio.scss";
---

<div class="bio">
  <div class="byline">
    <div class="avatar">
      <Image
        class="bio-avatar"
        src={profilePic}
        width={50}
        height={50}
        quality={80}
        alt="Profile picture"
      />
    </div>
    {
      author?.name && (
        <span>
          Written by <strong>{author.name}</strong>
        </span>
      )
    }
  </div>
  {
    social && (
      <p>
        You can find me around the internet at:{" "}
        <SocialLink social={social.twitter} />,{" "}
        <SocialLink social={social.instagram} />,{" "}
        <SocialLink social={social.github} />,{" "}
        <SocialLink social={social.gitlab} />, and{" "}
        <SocialLink social={social.linkedin} />.
      </p>
    )
  }
</div>
