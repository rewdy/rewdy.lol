---
import Section from "./Section.astro";

import { projectLinks as projects } from "../siteData.ts";

import "./SectionProjects.scss";
---

<Section cssClass="section-more section-smush">
  <h2>
    <span class="h-wrap">
      <span role="img" aria-label="fire">
